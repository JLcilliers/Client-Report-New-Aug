{
  "buildCommand": "cp prisma/schema.production.prisma prisma/schema.prisma && npx prisma generate && npx prisma migrate deploy && npx next build",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "env": {
    "FORCE_REBUILD": "true",
    "VERCEL_FORCE_NO_BUILD_CACHE": "1"
  },
  "functions": {
    "app/api/cron/daily-update/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/weekly-audit/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/update-keywords/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-update",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/weekly-audit",
      "schedule": "0 6 * * 0"
    },
    {
      "path": "/api/cron/update-keywords",
      "schedule": "0 2 * * 1"
    }
  ]
}